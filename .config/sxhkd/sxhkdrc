#
# independent key bindings
#

# terminal emulator
super + @space
	urxvt

# dropdown terminal
super + Return
	DROPDOWN_ID=$(cat /tmp/dropdownid); \
	bspc node $DROPDOWN_ID --flag hidden; bspc node -f $DROPDOWN_ID

# program launcher
super + Tab
	rofi -show combi -combi-modi "window,run,ssh" -modi combi

# clipboard manager
super + c
	clipmenu

# locate pointer
super + grave
      ~/bin/locate-pointer

# reload configuration files
super + Escape
	pkill -USR1 -x sxhkd

# toggle mute/unmute
super + m
	amixer set Master toggle

# increase/decrease volume level by 3%
super + {equal,minus}
	amixer -q sset Master 3%{+,-}

# pause mplayer
super + shift + {space, Escape}
      echo "{pause, stop}" > $HOME/.mplayer/cmd-fifo

# switch mplayer track
# http://www.mplayerhq.hu/DOCS/tech/slave.txt
super + {shift + q,shift + e}
      echo "pausing_keep_force pt_step {-1, 1} get_property pause" > $HOME/.mplayer/cmd-fifo

# seek mplayer track
super + shift + {a,s,w,d}
      echo "seek {-5,-60,+60,+5}" > $HOME/.mplayer/cmd-fifo

#
# bspwm key bindings
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill node
super + {_,shift + }x
	bspc node -{c,k}

# alternate between tiled and monocle layout
super + f
	bspc desktop -l next

#
# state/flags key bindings
#

# set special window state
super + {shift + t,shift + f}
	bspc node -t {pseudo_tiled,floating}

# set node flags
super + {shift + l,shift + s,shift + p}
	bspc node -g {locked,sticky,private}

#
# focus/swap key bindings
#

# focus or swap node in direction
super + {_,shift + }{a,s,w,d}
	bspc node -{f,s} {west,south,north,east}

# focus desktop in direction
super + {q, e}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
# super + {shift + q,shift + e}
# 	bspc desktop -f {first,last}

# focus older or newer node in history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect key bindings
#

# preselect in direction
super + ctrl + {a,s,w,d}
	bspc node -p {west,south,north,east}

# preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel preselection for node
super + ctrl + space
	bspc node -p cancel

# cancel preselection for desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize key bindings
#

# expand window by moving side outward
super + alt + {a,s,w,d}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract window by moving side inward
super + alt + shift + {a,s,w,d}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
